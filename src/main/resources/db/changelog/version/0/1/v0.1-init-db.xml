<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="05122024-create-link-table" author="Alexey">
        <createTable tableName="link">
            <column name="original_link" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="short_link" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="number_of_uses" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="05122024-create-short_link-index" author="Alexey">
        <createIndex indexName="idx_short_link" tableName="link">
            <column name="short_link"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>