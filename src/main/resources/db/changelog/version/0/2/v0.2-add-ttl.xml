<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="06122024-add-column-to-link-table" author="Alexey">
        <addColumn tableName="link">
            <column name="version" type="bigint"/>
            <column name="creation_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_time" type="TIMESTAMP"/>
            <column name="last_access_time" type="TIMESTAMP"/>
            <column name="usage_limit" type="int"/>
        </addColumn>
    </changeSet>

    <changeSet id="06122024-add-ttl-and-expiration-fields" author="Alexey">
        <addColumn tableName="link">
            <column name="ttl" type="BIGINT" remarks="Время жизни (Time To Live)"/>
            <column name="rolling_expiration" type="BOOLEAN" remarks="Флаг вычисления срока действия от последнего доступа"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>